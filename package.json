{
	"name": "web-boilerplate",
	"version": "1.0.0",
	"description": "Boilerplate for web development",
	"scripts": {
		"start:server": "webpack-dev-server --config ./webpack.config.dev.js --hot --inline --progress --open",
		"start": "npm-run-all --parallel start:server lint:watch test:watch",
		"lint": "esw webpack.config.* src --color",
		"lint:watch": "yarn run lint --watch",
		"test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
		"test:watch": "yarn run test --watch",
		"clean-dist": "rimraf ./dist && mkdir dist",
		"prebuild": "npm-run-all clean-dist test lint",
		"build": "webpack -p --config ./webpack.config.prod.js --progress",
		"postbuild": "babel-node buildScripts/distServer.js"
	},
	"author": "Ariel Cohen",
	"license": "MIT",
	"dependencies": {
		"react": "^16.2.0",
		"react-dom": "^16.2.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "6.26.0",
		"babel-eslint": "^8.2.1",
		"babel-loader": "7.1.2",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-async-to-generator": "^6.24.1",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-latest": "6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-register": "6.26.0",
		"chai": "4.1.2",
		"compression": "1.7.1",
		"cross-env": "5.1.3",
		"css-loader": "0.28.7",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"eslint": "4.14.0",
		"eslint-plugin-import": "2.8.0",
		"eslint-plugin-jest": "^21.5.0",
		"eslint-plugin-react": "^7.5.1",
		"eslint-watch": "3.1.3",
		"express": "4.16.2",
		"extract-text-webpack-plugin": "3.0.2",
		"helmet": "^3.9.0",
		"html-loader": "^0.5.1",
		"html-webpack-plugin": "2.30.1",
		"jsdom": "11.5.1",
		"mocha": "4.1.0",
		"nock": "9.1.5",
		"npm-run-all": "4.1.2",
		"open": "0.0.5",
		"preload-webpack-plugin": "^2.1.1",
		"react-hot-loader": "^3.1.3",
		"rimraf": "2.6.2",
		"script-ext-html-webpack-plugin": "^1.8.8",
		"style-ext-html-webpack-plugin": "^3.4.5",
		"style-loader": "0.19.1",
		"url-loader": "^0.6.2",
		"webpack": "3.10.0",
		"webpack-bundle-analyzer": "^2.9.1",
		"webpack-dev-middleware": "2.0.3",
		"webpack-dev-server": "^2.10.0",
		"webpack-md5-hash": "0.0.6"
	}
}
